<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="subject"
            type="com.meranged.schoolschedule.database.SubjectWithTeacher"/>
       <variable
            name="clickListener"
            type="com.meranged.schoolschedule.ui.subjects.SubjectsListener"/>
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/subjectCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/time_card_distance"
        app:cardCornerRadius="@dimen/time_card_radius"
        app:cardElevation="@dimen/time_card_elevation"
        app:contentPadding="@dimen/time_card_content_padding">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{() -> clickListener.onClick(subject)}">

            <TextView
                android:id="@+id/subjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subject1_name"
                android:layout_margin="@dimen/time_vertical_padding"
                android:textSize="@dimen/subject_name_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/roomNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subject_place1"
                android:textSize="@dimen/subject_name_text_size"
                android:background="@color/colorPrimary"
                android:padding="@dimen/time_horizontal_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/teacherOfSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/time_vertical_padding"
                android:text=""
                android:textSize="@dimen/subject_teacher_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subjectName" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>